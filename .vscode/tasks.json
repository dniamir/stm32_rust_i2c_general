{
  "version": "2.0.0",

  "tasks": [

    // Build for Blinky
    {
    "label": "Build blinky",
    "type": "shell",
    "command": "cargo",
    "args": [
        "build",
        "--bin",
        "blinky",  // Name of the binary to build - will only build this file and dependencies (i2c_scan.rs can be broken and this'll work)
        "--target",
        "thumbv7em-none-eabihf"
    ],
    "group": "build"
    },

    // Build for i2c_scan
    {
      "label": "Build i2c_scan",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "i2c_scan",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": "build"
    },

    // Build for bme680_example
    {
      "label": "Build bme680_example",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "bme680_example",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": "build"
    },

    // Build for bme680_read
    {
      "label": "Build bme680_read",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "bme680_read",
        "--target",
        "thumbv7em-none-eabihf"
      ],
      "group": "build"
    },
  ]
}